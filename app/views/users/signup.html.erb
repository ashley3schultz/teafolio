<h1>Signup</h1>
<%= form_for @user do |f| %>
    <%= f.text_field :username, placeholder: set_ph('username', @user), value: set_value('username', @user) %><br/>
    <%= f.text_field :email, placeholder: set_ph('email', @user), value: set_value('email', @user)  %><br/>
    <%= f.password_field :password, placeholder: set_ph('password', @user), value: set_value('password', @user)  %><br/>
    <%= f.submit 'Signup' %>
<% end %>
