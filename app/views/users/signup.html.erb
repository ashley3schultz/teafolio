<%= form_for @user do |f| %>
    <%= f.text_field :username, placeholder: !@user.errors[:username].empty? ? @user.errors[:username] : "Username" %><br/>
    <%= f.text_field :email, placeholder: "Email" %><br/>
    <%= f.password_field :password, placeholder: "Password" %><br/>
    <%= f.submit 'Signup' %>
<% end %>
