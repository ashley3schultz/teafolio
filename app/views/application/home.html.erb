<h1><%= current_user.username %></h1>

<h2 class='tight-title'>Recent Posts</h2>
<% @posts.each do |post| %>
  <h2><%= post.user.username %><br>
  <p><%= post.tea.name %></p></h2>
  <p><%= post.content %></p></h2>
<% end %>

<h2 class='tight-title'>My Posts</h2>
<% current_user.posts.each do |post| %>
  <h2><%= post.tea.name %></h2>
  <p><%= post.content %></p>
<% end %>

<h2 class='tight-title'>My Collection</h2>
<% current_user.teas.each do |tea| %>
  <%= render partial: "teas/tea_profile", locals: { tea: tea } %>
<% end %>

<h2 class='tight-title'>My Contributions</h2>
<% current_user.pending_teas.each do |tea| %>
  <%= render partial: "teas/tea_profile", locals: { tea: tea } %>
<% end %>

<h2 class='tight-title'>My Connections</h2>
<% current_user.friends.each do |friend| %>
  <%= render partial: "users/user_profile", locals: { friend: friend } %>
  <h2><%= friend.username %></h2>
  <p><%= friend.posts.last.tea.name %></p>
  <p><%= friend.posts.last.content %></p>
<% end %>
