<%= form_for post do |f| %>
  <%= f.label current_user.username %><br/>
  <%= f.text_area :content, placeholder: set_ph('content', post), value: set_value('content', post)  %>
  <%= f.hidden_field :tea_id, value: "#{@tea ? @tea.id : post.tea.id}"  %>
  <%= f.hidden_field :user_id, value: "#{@user ? @user.id : post.user.id}" %>
  <%= f.submit 'Publish' %>
<% end %>
